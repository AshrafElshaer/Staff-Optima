{
	"extends": "@optima/typescript-config/nextjs.json",
	"compilerOptions": {
		// "strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@optima/ui/*": ["../../packages/ui/src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"composite": false,
		"declaration": false,
		"declarationMap": false
	},
	"include": [
		"next-env.d.ts",
		"next.config.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
