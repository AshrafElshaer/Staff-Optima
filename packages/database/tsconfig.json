{
	"extends": "@optima/typescript-config/nextjs.json",
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["dist", "build", "node_modules"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"declaration": false,
		"declarationMap": false,
		"emitDeclarationOnly": false,
		"noEmit": true
	}
}
